@model MVCCore.ViewToController.Models.Customer
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<table cellpadding="0" cellspacing="0" class="table table-borderless">
    <tr>
        <th colspan="2" align="center">Customer Details</th>
    </tr>
    <tr>
        <td>Customer Id: </td>
        <td>
            @Html.TextBoxFor(m => m.CustomerId,new { @class="form-control"})
        </td>
    </tr>
    <tr>
        <td>Customer Name: </td>
        <td>
            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>Customer Address: </td>
        <td>
            @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>Customer Email: </td>
        <td>
            @Html.TextBoxFor(m => m.CustomerEmail, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>Gender: </td>
        <td>
            @Html.DropDownListFor(m => m.CustomerGender, new List<SelectListItem>
           { new SelectListItem{Text="Male", Value="M"},
             new SelectListItem{Text="Female", Value="F"},
             new SelectListItem{Text="Others", Value="O"}}, "Please select", new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td><input type="submit" value="Submit" class="btn btn-primary" /></td>
    </tr>
</table>
}
